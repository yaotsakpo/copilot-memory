{
  "name": "copilot-memory",
  "displayName": "Copilot Memory",
  "description": "Train GitHub Copilot to remember your coding preferences with persistent rules and personalized AI suggestions",
  "version": "0.1.0",
  "publisher": "yaotsakpo",
  "license": "MIT",
  "icon": "assets/copilot-memory.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yaotsakpo/copilot-memory.git"
  },
  "bugs": {
    "url": "https://github.com/yaotsakpo/copilot-memory/issues"
  },
  "homepage": "https://github.com/yaotsakpo/copilot-memory#readme",
  "keywords": [
    "copilot",
    "github-copilot",
    "ai",
    "artificial-intelligence",
    "code-completion",
    "rules",
    "personalization",
    "coding-assistant",
    "productivity",
    "developer-tools"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotMemory.addRule",
        "title": "Add Rule",
        "category": "Copilot Memory"
      },
      {
        "command": "copilotMemory.listRules",
        "title": "List Rules",
        "category": "Copilot Memory"
      },
      {
        "command": "copilotMemory.removeRule",
        "title": "Remove Rule",
        "category": "Copilot Memory"
      }
    ],
    "configuration": {
      "title": "Copilot Memory",
      "properties": {
        "copilotMemory.mongodbUri": {
          "type": "string",
          "default": "mongodb://localhost:27017/copilot-memory",
          "description": "MongoDB connection URI (must start with mongodb://)",
          "pattern": "^mongodb:\\/\\/[^\\s]+$",
          "patternErrorMessage": "Must be a valid MongoDB connection string starting with mongodb://"
        },
        "copilotMemory.fallbackToLocal": {
          "type": "boolean",
          "default": true,
          "description": "Use local .copilot-memory.json if MongoDB is unavailable"
        },
        "copilotMemory.maxRulesPerScope": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum number of rules allowed per scope (global/project/language)"
        },
        "copilotMemory.enableAutoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync rules with MongoDB at regular intervals"
        },
        "copilotMemory.syncIntervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 1440,
          "description": "Interval in minutes for automatic synchronization (5-1440 minutes)"
        },
        "copilotMemory.logLevel": {
          "type": "string",
          "enum": ["info", "warn", "error"],
          "default": "info",
          "description": "Logging level for the extension"
        },
        "copilotMemory.connectionTimeoutMs": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "maximum": 60000,
          "description": "MongoDB connection timeout in milliseconds (1000-60000)"
        },
        "copilotMemory.retryAttempts": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Number of retry attempts for MongoDB operations (0-10)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "npm run version:patch && git push --follow-tags",
    "release:minor": "npm run version:minor && git push --follow-tags",
    "release:major": "npm run version:major && git push --follow-tags"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "sinon": "^21.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "mongoose": "^7.5.0"
  }
}
